<% provide(:title, "Add Contact") %>

<div class="row">
  <div class="col-md-8 col-md-offset-2">

    <h1 class="text-center">New Contact</h1>

    <%= form_for @contact, html: { class: "form-horizontal" } do |f| %>
      <%= render 'shared/error_messages', object: @contact %>

      <div class="form-group">
        <%= f.label :name, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :phone, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.telephone_field :phone, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :address, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :address, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :organization, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :organization, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :birthday, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.date_field :birthday, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
          <%= f.submit "Add", class: "btn btn-primary" %>
        </div>
      </div>

    <% end %>
  </div>
</div>
